<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            background: #222; color: #fff; display: flex; flex-direction: column; align-items: center; padding: 20px;
        }
        .container { width: 100%; max-width: 900px; background: #333; padding: 30px; border-radius: 8px; margin-bottom: 20px;
        }
        .form-group { margin-bottom: 15px; }
        label { display: block; margin-bottom: 8px; }
        input[type="text"], input[type="datetime-local"] { width: calc(100% - 22px); padding: 10px; border-radius: 4px; border: 1px solid #555; background: #444; color: #fff; }
        input[type="number"] { width: 60px; padding: 10px; border-radius: 4px; border: 1px solid #555; background: #444; color: #fff; text-align: center; }
        button { padding: 10px 15px; border: none; border-radius: 4px; background: #007bff; color: white; font-size: 14px; cursor: pointer; }
        button:hover { background: #0056b3; }
        h1, h2 { text-align: center; }
        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th, td { padding: 12px; border: 1px solid #555; text-align: left; vertical-align: middle; }
        th { background: #444; }
        .score-form { display: flex; align-items: center; gap: 10px; }
    </style>
</head>
<body>
    <div class="container">
        <h1>Создать новый матч</h1>
        <form action="/admin/matches" method="POST">
            <div class="form-group">
                <label for="team1Name">Команда 1</label>
                <input type="text" id="team1Name" name="team1Name" required>
            </div>
            <div class="form-group">
                <label for="team2Name">Команда 2</label>
                <input type="text" id="team2Name" name="team2Name" required>
            </div>
            <div class="form-group">
                <label for="league">Лига</label>
                <input type="text" id="league" name="league" required>
            </div>
            <div class="form-group">
                <label for="matchDate">Дата и время матча</label>
                <input type="datetime-local" id="matchDate" name="matchDate" required>
            </div>
            <button type="submit" style="width: 100%;">Создать матч</button>
        </form>
    </div>

    <div class="container">
        <h2>Список матчей</h2>
        <table>
            <thead>
                <tr>
                    <th>Лига</th>
                    <th>Команды</th>
                    <th>Дата</th>
                    <th>Статус</th>
                    <th>Действие</th>
                </tr>
            </thead>
            <tbody>
                <% matches.forEach(function(match) { %>
                    <tr>
                        <td><%= match.league %></td>
                        <td><%= match.team1Name %> vs <%= match.team2Name %></td>
                        <td><%= new Date(match.matchDate._seconds * 1000).toLocaleString() %></td>
                        <td><%= match.status %></td>
                        <td>
                            <% if (match.status !== 'finished') { %>
                                <form class="score-form" action="/admin/matches/update" method="POST">
                                    <input type="hidden" name="matchId" value="<%= match.id %>">
                                    <input type="number" name="team1Score" min="0" placeholder="Счет 1" required>
                                    <span>:</span>
                                    <input type="number" name="team2Score" min="0" placeholder="Счет 2" required>
                                    <button type="submit">Завершить</button>
                                </form>
                            <% } else { %>
                                <%= match.team1Score %> : <%= match.team2Score %>
                            <% } %>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>